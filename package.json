{
  "name": "claude-burn-bar",
  "version": "1.0.1",
  "description": "Claude Burn Bar - A productivity tracking application",
  "author": "David",
  "main": "dist/main.js",
  "type": "module",
  "scripts": {
    "dev": "npm run build:watch & electron .",
    "build": "npm run clean && tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "package": "npm run build && electron-builder"
  },
  "dependencies": {
    "fast-glob": "^3.3.2",
    "dayjs": "^1.11.13"
  },
  "devDependencies": {
    "electron": "^37.2.5",
    "@eslint/js": "^9.18.0",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.18.0",
    "prettier": "^3.4.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  },
  "build": {
    "appId": "com.david.claude-burn-bar",
    "productName": "Claude Burn Bar",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "assets/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/Icon.png",
      "target": [
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    }
  }
}
